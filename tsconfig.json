{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "strict": true,
        "sourceMap": true,
        "lib": ["ESNext", "es2019"],
        "target": "ES2017",
        "outDir": "./dist",
        "baseUrl": "./lib",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
